<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MembershipActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFAC07"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/gridLayout2"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/memid"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="아이디를 입력하세요" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/mempass"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="비밀번호를 입력하세요" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/mempasscon"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="비밀번호 확인" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/memId"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="이름을 입력하세요" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="25dp" />

                <RadioGroup
                    android:id="@+id/memgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/genderM"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="남자" />

                    <RadioButton
                        android:id="@+id/genderF"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="여자" />

                </RadioGroup>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="번호"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/memphone"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="휴대전화를 입력하세요" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/memaddress"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="주소를 입력하세요" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/memnick"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="닉네임를 입력하세요" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="자기소개"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/memintro"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="자기소개를 입력하세요" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="활동지역"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/memmove"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="활동지역를 입력하세요" />
            </GridLayout>

            <android.widget.Button
                android:id="@+id/sucmem"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="가입하기"
                android:textSize="30dp"
                android:theme="@style/Theme.AppCompat.Light"
                android:textColor="@color/black"
                android:background="@drawable/button_round"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>