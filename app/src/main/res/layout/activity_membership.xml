<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MembershipActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFAC07"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteX="0dp" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:columnCount="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:layout_editor_absoluteX="30dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/memid"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="아이디를 입력하세요" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/mempass"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="비밀번호를 입력하세요" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/mempasscon"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="비밀번호 확인" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/memId"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="이름을 입력하세요" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="30dp" />

        <RadioGroup
            android:id="@+id/memgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/genderM"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="남자" />

            <RadioButton
                android:id="@+id/genderF"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="여자" />

        </RadioGroup>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="번호"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/memphone"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="휴대전화를 입력하세요" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/memaddress"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="주소를 입력하세요" />
    </GridLayout>

    <Button
        android:id="@+id/sucmem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입하기"
        android:textSize="30dp"
        android:theme="@style/Theme.AppCompat.Light"
        android:textColor="@color/black"
        android:background="@drawable/button_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        app:layout_constraintVertical_bias="0.094" />


</androidx.constraintlayout.widget.ConstraintLayout>