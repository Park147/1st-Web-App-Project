<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.team.mapper.HMapper">
	
	<select id="getList" resultType="com.example.team.dto.Hvo">
		select * from heart where h_id = #{h_id}
	</select>
	
	<select id="getCount">
		select count(*) from heart where h_num = #{h_num}
	</select>
	
	<select id="getList2" resultType="com.example.team.dto.Hvo">
		select * from heart where h_num = #{h_num}
	</select>

			
	<insert id="hRegister">
		insert into 
			heart (h_id, h_num) 
		values
			(#{h_id},#{h_num}) 
	</insert>
		
	<delete id="hDelete">
		delete from heart where h_num = #{h_num} and h_id = #{h_id}
	</delete>
	
	<select id="hChecked">
		select count(*) from heart where h_id = #{h_id} and h_num = #{h_num} 
	</select>
	
</mapper>
        